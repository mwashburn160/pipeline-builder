{
  "extends": "nx/presets/npm.json",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build"
        ]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "!{projectRoot}/dist/**/*",
        "!{projectRoot}/lib/**/*"
      ],
      "outputs": [
        "{projectRoot}/dist",
        "{projectRoot}/lib"
      ],
      "cache": true
    },
    "nx-release-publish": {
      "options": {
        "registry": "https://npm.pkg.github.com/",
        "tag": "next"
      }
    }
  },
  "release": {
    "projects": [
      "packages/*"
    ],
    "projectsRelationship": "fixed",
    "changelog": {
      "workspaceChangelogs": {
        "createRelease": "github"
      }
    },
    "version": {
      "generatorOptions": {
        "currentVersionResolverMetadata": {
          "registry": "https://npm.pkg.github.com/",
          "tag": "next"
        }
      }
    }
  },
  "affected": {
    "defaultBase": "origin/main"
  },
  "//": "~~ Generated by projen. To modify, edit .projenrc.ts and run \"pnpm dlx projen\"."
}
